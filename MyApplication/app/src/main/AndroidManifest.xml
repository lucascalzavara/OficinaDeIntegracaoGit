<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucascalzavara.controle">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProjetorActivity" />
        <activity android:name=".TVActivity" />
        <activity android:name=".NovoActivity" />
        <activity android:name=".NovoProjetorActivity" />
        <activity android:name=".NovoTVActivity" />
        <activity
            android:name=".PairedDevices"
            android:label="Paired Devices"
            android:parentActivityName=".MainActivity" >
        </activity>

    </application>

</manifest>