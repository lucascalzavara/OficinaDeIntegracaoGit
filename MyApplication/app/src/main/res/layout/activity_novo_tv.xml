    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CIMA"
        android:id="@+id/button32"
        android:layout_alignBottom="@+id/button29"
        android:layout_centerHorizontal="true"
        android:onClick="capturaCima" />

